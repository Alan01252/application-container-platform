{
  "kind": "PodSecurityPolicyList",
  "apiVersion": "v1",
  "items": [
    {
      "kind": "PodSecurityPolicy",
      "version": "v1",
      "namespaces": [
        "platform"
      ],
      "spec": {
        "privileged": true,
        "volumes": {
          "hostPath": true,
          "awsElasticBlockStore": true,
          "cephfs": true,
          "downwardAPI": true,
          "emptyDir": true,
          "gitRepo": true,
          "glusterfs": true,
          "persistentVolumeClaim": true,
          "rbd": true,
          "secret": true
        }
      }
    },
    {
      "kind": "PodSecurityPolicy",
      "version": "v1",
      "namespaces": [
        "openvpn"
      ],
      "spec": {
        "capabilities": [
          "SYS_ADMIN",
          "NET_ADMIN",
          "MKNOD"
        ],
        "volumes": {
          "hostPath": true,
          "emptyDir": true,
          "secret": true
        }
      }
    },
    {
      "kind": "PodSecurityPolicy",
      "version": "v1",
      "namespaces": [
        "srrs-ci"
      ],
      "spec": {
        "volumes": {
          "awsElasticBlockStore": true,
          "cephfs": true,
          "downwardAPI": true,
          "emptyDir": true,
          "gitRepo": true,
          "persistentVolumeClaim": true,
          "rbd": true,
          "secret": true,
          "hostPath": true,
          "hostPathAllowed": [
            "/var/lib/data",
            "/var/run/docker.sock"
          ]
        }
      }
    },
    {
      "kind": "PodSecurityPolicy",
      "version": "v1",
      "namespaces": [
        "*"
      ],
      "spec": {
        "volumes": {
          "awsElasticBlockStore": true,
          "cephfs": true,
          "downwardAPI": true,
          "emptyDir": true,
          "gitRepo": true,
          "persistentVolumeClaim": true,
          "rbd": true,
          "secret": true,
          "hostPath": true,
          "hostPathAllowed": [
            "/var/lib/data"
          ]
        }
      }
    }
  ]
}
